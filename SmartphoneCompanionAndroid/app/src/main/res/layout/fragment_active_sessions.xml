<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".ui.fragments.ActiveSessionsFragment"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logoImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_phonelink_64dp"/>

    <TextView
            android:id="@+id/intro5TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/logoImageView"
            android:layout_marginTop="48dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/secondaryTextColor"/>

    <TextView
            android:id="@+id/intro6TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/intro5TextView"
            android:layout_marginTop="48dp"
            android:text="@string/intro_6"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/secondaryTextColor"/>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/intro7cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/primaryColor"
            app:layout_constraintTop_toBottomOf="@id/intro6TextView">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/intro_7"
                android:textSize="14sp"
                android:layout_margin="16dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:backgroundTint="@color/primaryColor"
            android:src="@drawable/ic_add"
            android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>